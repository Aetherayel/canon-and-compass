---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import SearchCollection from "@components/SearchCollection";
import { CLEARING } from "@consts";

const entries = (await getCollection("the-clearing"))
  .filter((entry) => !entry.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const tags = [...new Set(entries.flatMap((entry) => entry.data.tags))].sort(
  (a, b) => a.localeCompare(b),
);

const estimated_initial_size =
  28 + entries.length * 158 + (entries.length - 1) * 12;
---

<PageLayout title={CLEARING.TITLE} description={CLEARING.DESCRIPTION}>
  <TopLayout>
    <div class="animate">
      <h1 class="text-3xl font-semibold text-black dark:text-white mt-2">
        {CLEARING.TITLE}
      </h1>
      <div class="mt-1">
        {CLEARING.DESCRIPTION}
      </div>
    </div>
  </TopLayout>
  <BottomLayout>
    <div
      id="search-collection-wrapper"
      class="animate"
      style={{ minHeight: `${estimated_initial_size}px` }}
    >
      <SearchCollection
        client:load
        entry_name={"The Clearing"}
        tags={tags}
        data={entries}
      />
    </div>
  </BottomLayout>
</PageLayout>
