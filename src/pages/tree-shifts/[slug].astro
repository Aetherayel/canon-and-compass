---
import { type CollectionEntry, getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import TopLayout from "@layouts/TopLayout.astro"
import BottomLayout from "@layouts/BottomLayout.astro"
import ArticleTopLayout from "@layouts/ArticleTopLayout.astro"

// Create the static tree-shifts pages
export async function getStaticPaths() {
        const treeShifts = await getCollection("tree-shifts")
        return treeShifts.map((treeShifts) => ({
                params: { slug: treeShifts.slug },
                props: treeShifts,
        }))
}

// Get the requested tree shift
 type Props = CollectionEntry<"tree-shifts">
 const treeShifts = Astro.props
 const { title, description } = treeShifts.data
---

<PageLayout title={title} description={description}>
  <TopLayout>
    <div class="animate">
      <ArticleTopLayout entry={treeShifts} />
    </div>
  </TopLayout>
  <BottomLayout />
</PageLayout>